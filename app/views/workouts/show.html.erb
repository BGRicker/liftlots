<%= render 'exercises/new' %>
<br>

<div class="table-container col-xs-10 col-xs-offset-1">
  <h3><%= @workout.title %></h3>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <tr>
        <th>Name</th>
        <th>Reps</th>
        <th>Notes</th>
      </tr>

      <% @exercises.each do |exercise| %>
        <tr>
          <td><%= exercise.name %></td>
          <td><%= exercise.reps %><br></td>
          <td><%= exercise.note%><br></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

